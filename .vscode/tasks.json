{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build liru wheel",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": ["-m", "build", "--wheel"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install liru (editable)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\pip.exe",
            "args": ["install", "-e", "."],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\pytest.exe",
            "args": ["tests/", "-v"],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean build artifacts",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": ["-c", "import shutil; [shutil.rmtree(p, ignore_errors=True) for p in ['build', 'dist', '_skbuild', 'liru.egg-info']]"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
